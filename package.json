{
  "name": "wanakana",
  "version": "2.3.1",
  "license": "MIT",
  "homepage": "http://www.wanakana.com",
  "description": "Utility library for checking and converting between Kanji, Hiragana, Katakana, and Romaji",
  "keywords": [
    "english",
    "japanese",
    "hiragana",
    "katakana",
    "kana",
    "romaji",
    "conversion",
    "transliteration",
    "input",
    "wanikani"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com/WaniKani/WanaKana"
  },
  "bugs": {
    "url": "https://github.com/WaniKani/WanaKana/issues"
  },
  "devEngines": {
    "node": ">=8.9.1"
  },
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "node ./scripts/buildDist.js",
    "precommit": "lint-staged && npm run test",
    "commit": "git-cz",
    "predocs": "rimraf ./gh-pages/docs",
    "docs": "node_modules/.bin/jsdoc -c jsdoc.json",
    "docs:watch": "onchange './src/**/*.js' -- npm run docs",
    "ghpages:publish": "gh-pages -d gh-pages",
    "pretest": "rimraf ./coverage",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:view": "opn ./coverage/lcov-report/index.html",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "release": "node ./scripts/release.js",
    "format": "prettier-eslint --write",
    "lint": "eslint"
  },
  "lint-staged": {
    "*.js": [
      "npm run format",
      "npm run lint",
      "git add"
    ]
  },
  "jest": {
    "bail": false,
    "verbose": false,
    "testMatch": [
      "<rootDir>/test/**/*.test.js"
    ],
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 100,
        "lines": 95,
        "statements": 95
      }
    },
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/logInputEvents.js",
      "!src/**/index.js",
      "!**/node_modules/**",
      "!**/test/**"
    ]
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-eslint": "7.2.3",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-preset-env": "1.5.2",
    "benchmark": "2.1.4",
    "commitizen": "2.9.6",
    "coveralls": "2.13.1",
    "cross-env": "5.0.1",
    "cz-conventional-changelog": "2.0.0",
    "docdash": "0.4.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb": "15.0.1",
    "eslint-plugin-import": "2.3.0",
    "eslint-plugin-jsx-a11y": "5.0.3",
    "eslint-plugin-react": "7.1.0",
    "gh-pages": "1.0.0",
    "http-server": "0.10.0",
    "husky": "0.13.4",
    "jest": "20.0.4",
    "jsdoc": "3.5.5",
    "jsdom-simulant": "1.1.2",
    "lint-staged": "4.0.0",
    "onchange": "3.2.1",
    "opn-cli": "3.1.0",
    "prettier-eslint-cli": "4.4.0",
    "readline-sync": "1.4.7",
    "rimraf": "2.6.1",
    "rollup": "0.43.0",
    "rollup-plugin-babel": "2.7.1",
    "rollup-plugin-commonjs": "8.0.2",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-replace": "1.1.1",
    "rollup-plugin-uglify": "2.0.1"
  },
  "dependencies": {},
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
